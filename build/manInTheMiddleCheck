#!/bin/bash

# check the sourceforge ssh key against our saved one
sfloginFingerprint=$(ssh-keygen -r "$sflogin")
sfloginSaved=ssh-keygen -l -f ~/.ssh/known_hosts | grep shell.sourceforge.net | awk '{ print $2 }'
if [[ sfloginFingerprint != sfloginSaved]]; then
	echo "the ssh key of $sflogin doesn't look right"
	echo "I want $sflogin saved"
	echo "but I got $sfloginFingerprint"
	exit 1
fi
exit 0

