#!/bin/bash

echo "Do you want to stop? [y/n]"
read cf
cf=`echo $cf | tr "[:upper:]" "[:lower:"]`
if [[ "$cf" == "y" ]]; then
	echo "exiting - you may need to blankem"
	exit
fi
if [[ "$cf" == "n" ]]; then
	echo "continuing"
fi
if [[ "$cf" != [yn] ]]; then
	echo "Please respond with a [y/n]: "
	chooser
fi

